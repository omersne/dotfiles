# Colors borrowed from https://upload.wikimedia.org/wikipedia/en/1/15/Xterm_256color_chart.svg

if [ -t 1 ]; then
    color_none="\033[00m"
    color_red="\033[38;5;9m"
    color_green="\033[38;5;10m"
    color_yellow="\033[38;5;11m"
    color_cyan="\033[38;5;14m"
    color_orange="\033[38;5;208m"
    color_purple="\033[38;5;93m"
    color_lavender="\033[38;5;105m"
    color_pink="\033[38;5;13m"
    color_blue="\033[38;5;33m"

    color_painful_error="\033[33;1m\033[48;5;124m"

    underline=$(tput smul)
    nounderline=$(tput rmul)

    color_red_bg="\033[48;5;9m"
    color_green_bg="\033[48;5;10m"
    color_yellow_bg="\033[48;5;11m"
    color_cyan_bg="\033[48;5;14m"
    color_orange_bg="\033[48;5;208m"
    color_purple_bg="\033[48;5;93m"
    color_lavender_bg="\033[48;5;105m"
    color_pink_bg="\033[48;5;13m"
    color_blue_bg="\033[48;5;33m"

    color_ok="$green"
    color_error="$red"
    color_info="$cyan"
    color_help_usage="$yellow"
fi

echo_red()
{
    echo -e "${color_red}$@${normal}"
}

echo_green()
{
    echo -e "${color_green}$@${normal}"
}

echo_yellow()
{
    echo -e "${color_yellow}$@${normal}"
}

echo_cyan()
{
    echo -e "${color_cyan}$@${normal}"
}

echo_orange()
{
    echo -e "${color_orange}$@${normal}"
}

echo_purple()
{
    echo -e "${color_purple}$@${normal}"
}

echo_lavender()
{
    echo -e "${color_lavender}$@${normal}"
}

echo_pink()
{
    echo -e "${color_pink}$@${normal}"
}

echo_blue()
{
    echo -e "${color_blue}$@${normal}"
}

echo_painful_error()
{
    echo -e "${color_painful_error}$@${normal}"
}

echo_ok()
{
    echo -e "${color_ok}$@${normal}"
}

echo_error()
{
    echo -e "${color_error}$@${normal}" >&2
}

echo_info()
{
    echo -e "${color_info}$@${normal}"
}

